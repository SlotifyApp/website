                    "400": {
                        "description": "Bad request"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    },
                    "500": {
                        "description": "Something went wrong internally",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
