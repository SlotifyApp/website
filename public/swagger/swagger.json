                        "description": "Email of user"
                    },
                    {
                        "in": "query",
                        "name": "firstName",
                        "schema": {
                            "type": "string"
                        },
                        "description": "First name of user"
                    },
                    {
                        "in": "query",
                        "name": "lastName",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Last name of user"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Users matching the query parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
